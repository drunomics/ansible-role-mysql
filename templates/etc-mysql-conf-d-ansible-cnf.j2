[mysqld]
bind_address = {{ mysql_bind_address }}
key_buffer_size    = {{ mysql_key_buffer_size }}
table_open_cache   = {{ mysql_table_open_cache }}
query_cache_limit  = {{ mysql_query_cache_limit }}
query_cache_size   = {{ mysql_query_cache_size }}
max_allowed_packet = {{ mysql_max_allowed_packet }}
max_connections = {{ mysql_max_connections }}
max_user_connections = {{ (mysql_max_connections|int * mysql_max_user_connections_percentage|float / 100)|round|int }}
;max_binlog_size    = 500M

; Performance optimizing

; Increase temporary table size in memory to avoid writing to the disk.
; Default seems to be 16M. Maximum table size in RAM is minimum of the
; the following two settings. See mysql docs about "Created_tmp_disk_tables"
tmp_table_size = {{ mysql_tmp_table_size }}
max_heap_table_size = {{ mysql_tmp_table_size }}
